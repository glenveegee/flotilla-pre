#!/bin/bash

raspbian_old () {
    DIST_CHK=$(cat /etc/os-release | grep "wheezy")

    if [ "" == "$DIST_CHK" ];then
        false
    else
        true
    fi
}

if [ $(id -u) -ne 0 ]; then
    echo "This script must be run as root.\n"
    exit 1
fi

if [ ! -f /etc/init.d/flotillad ]; then
    echo "Stopping Flotilla Deamon...\n"
    sudo service flotillad stop
fi

echo "Launching Flotilla pre-release...\n"

if ! raspbian_old; then
    ./flotillad/flotilla-jessie &
else
    ./flotillad/flotilla-wheezy &
fi

cd ./rockpool
python ./rockpool.py

exit 0
